@model GestionSiembra.Models.RegistroViewModel;

@{
    ViewData["Title"] = "Registro";
}
<div class="card">
    <div class="card-body">
        <h1>Registrate</h1>
<form asp-action="Registro">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" autocomplete="off" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button class="btn-primary btn">Registrate</button>
    <a class=" btn btn-success" asp-action="login">Deseo loguearme</a>
</form>
  </div>
</div>
@section Scripts{
    <partil name="_validationScriptsPartial"/>
}