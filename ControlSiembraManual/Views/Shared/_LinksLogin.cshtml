@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager

    <ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola @User.Identity.Name </span>
        </li>
        <li class="navbar-item">
            <form class="form-inline" asp-action="Login" asp-controller="Usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">logout</button>
            </form>
        </li>
    }else{
        
        <li class="nav-item">
            <a class="nav-link text-dark"asp-controller="Usuarios" asp-action="Registro">
                Registro
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Login">
                login
            </a>
        </li>
    }

    </ul>